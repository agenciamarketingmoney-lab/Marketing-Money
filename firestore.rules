
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função básica: está logado no Firebase Auth?
    function isAuthenticated() {
      return request.auth != null;
    }

    // Regras simplificadas para permitir o início do projeto
    // Em produção, você voltaria a usar a verificação de roles
    
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }

    match /companies/{companyId} {
      allow read, write: if isAuthenticated();
    }

    match /campaigns/{campaignId} {
      allow read, write: if isAuthenticated();
    }
    
    match /metrics/{metricId} {
      allow read, write: if isAuthenticated();
    }

    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }
    
    // Fallback
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
